<h1>Actor #<%= @the_actor.id%> details</h1>
<p> 
  <a href= "/actors">Go back</a> | 
</p>

<dl>
  <dt>Name</dt>
  <dd> <%= @the_actor.name %> </dd>

  <dt>DOB</dt>
  <dd> <%= @the_actor.dob %> </dd>

  <dt>Bio</dt>
  <dd> <%= @the_actor.bio%> </dd>

  <dt>Image</dt>
  <dd> <img src="http://robohash.org/<%= @the_actor.name %>"> </dd>

  <dt>Created at</dt>
  <dd> <%= time_ago_in_words(@the_actor.created_at)%> ago </dd>

  <dt>Updated at</dt>
  <dd> <%= time_ago_in_words(@the_actor.updated_at)%> ago </dd>
</dl>


<h2>Filmography</h2>


<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th></th>
  </tr>
  <% @characters.each do |a_thing|%>
    <% a = Movie.where({ :id => a_thing.movie_id }).at(0) %>
    <% c = Director.where({ :id => a.director_id }).at(0) %>
    <tr>
      <td>
        <%= a.title %>
      </td>
      <td>
        <%= a.year %>
      </td>
      <td>
        <%= c.name %>
      </td>
      <td>
        <%= a_thing.name %>
      </td>
      <td>
        <a href= "/movies/<%= a_thing.id%>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>

